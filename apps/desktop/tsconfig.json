{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["ES2022"],
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@omniscribe/shared": ["../../packages/shared/dist"],
      "@omniscribe/shared/*": ["../../packages/shared/dist/*"]
    }
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist"]
}
