{
  "name": "@omniscribe/mcp-server",
  "version": "0.1.4",
  "description": "Omniscribe MCP server for Claude Code status reporting",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "omniscribe-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "node esbuild.config.mjs",
    "build:dev": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "start": "node dist/index.js",
    "clean": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true})\""
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@omniscribe/shared": "workspace:*",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.2.1",
    "esbuild": "^0.27.2",
    "typescript": "^5.5.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
