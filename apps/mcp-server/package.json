{
  "name": "@omniscribe/mcp-server",
  "version": "0.5.0",
  "description": "Omniscribe MCP server for Claude Code status reporting",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "omniscribe-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "node esbuild.config.mjs",
    "build:dev": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json --watch",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:watch": "jest --watch",
    "start": "node dist/index.js",
    "clean": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true})\""
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@omniscribe/shared": "workspace:*",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.1",
    "esbuild": "^0.27.2",
    "jest": "^30.0.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.5.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
