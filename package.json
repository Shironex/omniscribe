{
  "name": "omniscribe",
  "version": "0.1.0",
  "private": true,
  "pnpm": {
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "electron",
      "esbuild",
      "node-pty"
    ]
  },
  "scripts": {
    "dev": "pnpm --filter @omniscribe/shared build && concurrently -k -n web,desktop -c cyan,yellow \"pnpm dev:web\" \"wait-on http://localhost:5173 && pnpm --filter @omniscribe/mcp-server build:dev && pnpm --filter @omniscribe/desktop dev\"",
    "dev:web": "pnpm --filter @omniscribe/web dev",
    "build": "pnpm --filter @omniscribe/shared build && pnpm --filter @omniscribe/web build && pnpm --filter @omniscribe/mcp-server build && pnpm --filter @omniscribe/desktop build",
    "build:packages": "pnpm --filter @omniscribe/shared build",
    "package": "pnpm build && pnpm --filter @omniscribe/desktop package",
    "package:win": "pnpm build && pnpm --filter @omniscribe/desktop package:win",
    "package:mac": "pnpm build && pnpm --filter @omniscribe/desktop package:mac",
    "package:linux": "pnpm build && pnpm --filter @omniscribe/desktop package:linux",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml,css}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.2.0",
    "typescript": "^5.5.0",
    "wait-on": "^9.0.3"
  }
}
