{
  "name": "omniscribe",
  "private": true,
  "pnpm": {
    "onlyBuiltDependencies": ["@nestjs/core", "electron", "esbuild", "node-pty"]
  },
  "scripts": {
    "dev": "pnpm --filter @omniscribe/web dev",
    "dev:desktop": "pnpm --filter @omniscribe/desktop dev",
    "build": "pnpm -r build",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "typescript": "^5.5.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint-config-prettier": "^9.1.0"
  }
}
